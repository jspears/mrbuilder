{
  "name": "@mrbuilder/example-lib-tailwindcss",
  "description": "Example showing a lib build for webpack and tailwindcss",
  "version": "4.0.2",
  "private": true,
  "devDependencies": {
    "@mrbuilder/cli": "^4.0.1",
    "@mrbuilder/plugin-babel-7": "^4.0.2",
    "@mrbuilder/plugin-tailwindcss": "^4.0.2",
    "@mrbuilder/plugin-typescript": "^4.0.1",
    "@mrbuilder/preset-app": "^4.0.2",
    "@mrbuilder/preset-lib": "^4.0.2"
  },
  "scripts": {
    "prepare": "mrbuilder",
    "start": "mrbuilder"
  },
  "source": "src",
  "main": "lib",
  "license": "0BSD",
  "mrbuilder": {
    "plugins": [
      "@mrbuilder/plugin-typescript",
      [
        "@mrbuilder/plugin-tailwindcss",
        {
          "config": {
            "theme": {
              "extend": {
                "colors": {
                  "custom-red": "#F92D81"
                }
              }
            }
          }
        }
      ]
    ]
  }
}
